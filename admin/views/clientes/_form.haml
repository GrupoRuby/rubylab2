- error = @cliente.errors.include?(:cedula)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :cedula, :class => 'control-label'
  .controls
    =f.text_field :cedula, :class => 'form-control input-large input-with-feedback'
    %span.help-inline=error ? f.error_message_on(:cedula, :class => 'text-error') : pat(:example)
