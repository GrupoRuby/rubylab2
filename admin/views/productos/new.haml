%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:productos, :index)
  %li.active=link_to tag_icon(:plus, pat(:new)), url(:productos, :new)

.tabs-content
  = form_for :producto, url(:productos, :create), :class => 'form-horizontal' do |f|
    =partial 'productos/form', :locals => { :f => f }
